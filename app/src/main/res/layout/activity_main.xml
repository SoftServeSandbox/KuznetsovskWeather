<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/IDWeatherLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="67dp"
        android:text="@string/hello_world"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="italic|bold" />

    <Button
        android:id="@+id/IDloadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="loadWeatherHandler"
        android:text="Load weather" />

    <TextView
        android:id="@+id/IDPressureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/IDWeatherLabel"
        android:background="#77FFFFFF"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:text="@string/pressure"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/IDTempLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/IDPressureLabel"
        android:background="#77FFFFFF"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:text="@string/temp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/IDPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/IDPressureLabel"
        android:layout_below="@+id/IDWeatherLabel"
        android:layout_toRightOf="@+id/IDloadButton"
        android:background="#770000FF"
        android:padding="4dp"
        android:text="no"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/IDTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/IDTempLabel"
        android:layout_toRightOf="@+id/IDloadButton"
        android:background="#770000FF"
        android:padding="4dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/IDCloudsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/IDTempLabel"
        android:background="#77FFFFFF"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:text="@string/clouds"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/IDClouds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/IDCloudsLabel"
        android:layout_toRightOf="@+id/IDloadButton"
        android:background="#770000FF"
        android:padding="4dp"
        android:text="no"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/IDWindLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/IDCloudsLabel"
        android:background="#77FFFFFF"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:text="Wind"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/IDWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/IDWindLabel"
        android:layout_toRightOf="@+id/IDloadButton"
        android:background="#770000FF"
        android:padding="4dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
